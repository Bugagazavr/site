!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %title
      = data.page.title || 'RubyNoName'
    = stylesheet_link_tag 'normalize', 'all', 'article'
    = javascript_include_tag 'all'

  %body{class: page_classes}
    %header
    %nav{role: 'navigation'}
      %ul{class: 'main-navigation'}
        %li
          = link_to 'Главная', '/'
        %li
          = link_to 'Архив выпусков', '#'
        %li.search
          .wrap
            <input type="text" placeholder="Поиск..." value="" onsubmit="return false;" id="searchmenui_search" class="" name="search">
    #main
      %aside
        .block
          %h2 Подписаться
          .subscribe
            %a{href: "/feeds/itunes.xml", class: "itunes"}
              %img{src: "../images/icons/itunes.png", alt: "iTunes"}
            %a{href: "http://twitter.com/rubynoname", class: "twitter"}
              %img{src: "../images/icons/twitter.png", alt: "Twitter"}
            %a{href: "/feeds/episodes.rss", class: "rss"}
              %img{src: "../images/icons/rss.png", alt: "RSS"}
        .block
          %h2 Последние выпуски
          %ul
            - blog.articles[0...5].each do |article|
              %li
                = link_to article.title, article.url

        .block.twitter-widget
          %a{class: "twitter-timeline", href: "https://twitter.com/rubynoname", 'data-widget-id' => "255294620714536961"} Tweets by @rubynoname

          %script
            !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");

      .wrap
        = yield
