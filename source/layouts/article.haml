!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}
    %title
      = data.page.title || 'RubyNoName'
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico">
    = stylesheet_link_tag 'normalize', 'all', 'article'
    = javascript_include_tag 'all'

  %body{class: page_classes}
    %header
      %span.title Русскоязычный подкаст о языке Ruby
    = partial 'nav'
    #main
      %aside
        = partial 'sidebar'

      .wrap
        %article{itemscope: '', itemtype: 'http://schema.org/Article'}
          %div{itemprop: 'author', itemscope: '', itemtype: 'http://schema.org/Person'}
            %meta{itemprop: 'name', content: 'Ruby NoName Podcast'}
            %meta{itemprop: 'url', content: site_url}
            %meta{itemprop: 'image', content: site_url + '/images/logo_64.png'}
          %h1
            = link_to data.page.title, '/' + request.path, {itemprop: 'name headline'}
            %time{itemprop: 'datePublished', datetime: data.page.date.strftime('%Y-%m-%dT%H:%M')}= Russian::strftime(data.page.date, '%B %e, %Y')
          .body{itemprop: 'articleBody'}
            = yield
